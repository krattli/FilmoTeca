{# src/views/list.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Liste des Films</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
            body {
                background-color: black;
                color: beige;
                font-family: Arial, sans-serif;
            }
            .table {
                background-color: black;
                color: beige;
                border: 1px solid beige;
            }
            .table thead th {
                color: beige;
                border-bottom: 2px solid beige;
            }
            .table tbody td {
                border-top: 1px solid beige;
            }
        </style>
</head>
<body>
    <div class="container mt-5">
            <h1 class="text-center mb-4">Liste des Films</h1>

            {% if films is not empty %}
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th># </th>
                            <th>Titre</th>
                            <th>Année</th>
                            <th>Genre</th>
                            <th>Synopsis</th>
                            <th>Réalisateur</th>
                            <th>Date d'ajout</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for film in films %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ film.title }}</td>
                                <td>{{ film.year }}</td>
                                <td>{{ film.type }}</td>
                                <td>{{ film.synopsis }}</td>
                                <td>{{ film.director }}</td>
                                <td>{{ film.createdAt|date("d/m/Y H:i") }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="text-center">Aucun film trouvé.</p>
            {% endif %}
        </div>
</body>
</html>
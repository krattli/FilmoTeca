{# src/views/list.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Liste des Films</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1>Liste des Films</h1>

    {% if films is not empty %}
        <ul>
            {% for film in films %}
                <li>
                    <strong>{{ film.title }}</strong> ({{ film.year }}) - {{ film.type }}<br>
                    <em>{{ film.synopsis }}</em><br>
                    <small>Réalisé par: {{ film.director }}</small><br>
                    <small>Ajouté le: {{ film.createdAt|date("d/m/Y H:i") }}</small>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun film trouvé.</p>
    {% endif %}
</body>
</html>
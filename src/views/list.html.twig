{% extends 'base.html.twig' %}

{% block title %}
    Liste des Films
{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Films</h1>
        {% if films is not empty %}
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th class="headTable">#</th>
                        <th class="headTable">Titre</th>
                        <th class="headTable">Année</th>
                        <th class="headTable">Genre</th>
                        <th class="headTable">Synopsis</th>
                        <th class="headTable">Réalisateur</th>
                        <th class="headTable">Date d'ajout</th>
                    </tr>
                </thead>
                <tbody>
                    {% for film in films %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ film.title }}</td>
                            <td>{{ film.year }}</td>
                            <td>{{ film.type }}</td>
                            <td>{{ film.synopsis }}</td>
                            <td>{{ film.director }}</td>
                            <td>{{ film.createdAt|date("d/m/Y H:i") }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="text-center">Aucun film trouvé.</p>
        {% endif %}
    </div>
{% endblock %}